<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.goodjob.wordmemorizationaid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WordMemorizeViewPager"></activity>
        <activity
            android:name=".WordMemorizeActivity"
            android:label="@string/title_activity_word_memorize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".addWordItemActivity" />
        <activity
            android:name=".wordListActivity"
            android:label="@string/title_activity_word_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DictionaryWebView" />
        <activity
            android:name=".NewsListItemsWebView"
            android:label="@string/title_activity_news_list_items_web_view"
            android:parentActivityName=".NewsListEditActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.goodjob.wordmemorizationaid.NewsListEditActivity" />
        </activity>
        <activity android:name=".addNewsItems" />
        <activity android:name=".NewsListEditActivity" />
        <activity
            android:name=".YoutubeActivity"
            android:label="Youtube Player" />
        <activity
            android:name=".StandaloneActivity"
            android:label="Standalone Activity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>